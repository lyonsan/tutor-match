<%= render "shared/header" %>
<h1>needs new</h1>
<div class="registration-body">
  <%= form_with model: @need, url: foreigners_needs_path, class: 'registration-main', local: true do |f| %>
    <div class='form-wrap'>
      <div class='form-header'>
        <h1 class='form-header-text'>
          create a new need form
        </h1>
      </div>

      <%= render 'shared/error_messages', model: f.object %>
      
      <div class="form-group">
        <div class='form-text-wrap'>
          <%= f.label :title, "need title", class:"form-text" %>
          <span class="indispensable">indispensable</span>
        </div>
        <%= f.text_area :title, class:"input-default", maxlength:"40" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <%= f.label :detail, "need detail", class:"form-text" %>
          <span class="indispensable">indispensable</span>
        </div>
        <%= f.text_area :detail, class:"input-long", maxlength:"200" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <%= f.label :remarks, "remarks", class:"form-text" %>
        </div>
        <%= f.text_area :remarks, class:"input-long", placeholder:"please fill remarks if necessary", maxlength:"200" %>
      </div>
      
      
      <div class="form-group">
        <h2 class='form-bottom-text'>
          Please push button to create a new need.
        </h2>
      </div>
      <div class='register-btn'>
        <%= f.submit "Register" ,class:"register-link" %>
      </div>
    </div>

  <% end %>
</div>